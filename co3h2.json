{
  "buildGeoms": {
    "enable": false,
    "jobList": [
      {
        "dataPath": "data/test",
        "inputCartesianFiles": [
          { "file": "mon_h2o.xyz", "count": 1 },
          { "file": "mon_nh3.xyz", "count": 0 }
        ],
        "clusters": 5,
        "boxLength": 3,
        "boxGrowth": {
          "enable": true,
          "increment": 3
        },
        "minDistanceMolecules": 2,
        "optMethod": "B3LYP",
        "optBasisSet": "6-31G(d)",
        "memComFile": "1600",
        "memPBSFile": "10",
        "startNum": 1
      },
      {
        "dataPath": "data/test2",
        "inputCartesianFiles": [
          { "file": "mon_h2o.xyz", "count": 0 },
          { "file": "mon_nh3.xyz", "count": 1 }
        ],
        "clusters": 5,
        "boxLength": 3,
        "boxGrowth": {
          "enable": true,
          "increment": 3
        },
        "minDistanceMolecules": 2,
        "optMethod": "B3LYP",
        "optBasisSet": "6-31G(d)",
        "memComFile": "1600",
        "memPBSFile": "10",
        "startNum": 1
      }
    ]
  },
  "qmgr": {
    "enable": { "exc": false, "vib": false },
    "options": {
      "minDelay": 1,
      "maxResub": 1000,
      "maxQueue": 200,
      "cluster": "map"
    },
    "jobList": [
      {
        "dataPath": "./data/40_co3h2",
        "outName": "40_co3h2",
        "optResub": {
          "optMethod": "B3LYP",
          "optBasisSet": "6-31G(d)",
          "memComFile": "1600",
          "memPBSFile": "10"
        },
        "excList": [
          {
            "excMethod": "B3LYP",
            "excBasisSet": "6-311G(d,p)",
            "memComFile": "1600",
            "memPBSFile": "10",
            "nStates": 50,
            "SCRF": ""
          }
        ],
        "vibList": []
      }
    ]
  },
  "dataAnalysis": {
    "enable": true,
    "dataPath": "data/40_co3h2",
    "temperature": 20,
    "type": "exc",
    "output": {
      "numerical": {
        "enable": true,
        "type": ".json",
        "outFile": "tmp.json",
        "excList": [
          {
            "excMethod": "B3LYP",
            "excBasisSet": "6-311G(d,p)",
            "nStates": 50,
            "acquiredStates": "50",
            "SCRF": ""
          }
        ]
      },
      "plot": {
        "enable": true,
        "range": { "x": [4, 10.5], "y": [0, 1.5] },
        "x_units": "eV",
        "fileName": "co3h2_graphical_abstract.png",
        "title": "",
        "dpi": 400,
        "specsims": {
          "dft": {
            "range": [0, 12],
            "units": "eV",
            "FWHM": 0.5
          },
          "extra": {
            "range": [0, 12],
            "units": ["nm", "eV"],
            "broadening_units": "eV",
            "FWHM": 0.5
          }
        },
        "dft": {
          "legendLabelBasisSet": false,
          "specsim": {
            "range": [0, 10.5],
            "units": "eV",
            "FWHM": 2
          },
          "peaks": false,
          "excList": [
            {
              "dataPath": "data/40_co3h2",
              "excMethod": "B3LYP",
              "excBasisSet": "6-311G(d,p)",
              "nStates": 100,
              "acquiredStates": "100",
              "SCRF": "",
              "line": { "color": "red", "type": "-" },
              "legendLabel": "Amorphous"
            }
          ]
        },
        "exp": {
          "enable": true,
          "peaks": false,
          "expData": [
            {
              "path": "./exp_data/co3h2_20_225_20.csv",
              "units": { "input": "nm", "output": "eV" },
              "line": { "color": "k", "type": "--" },
              "legendLabel": "Exp. Solid A"
            },
            {
              "path": "./exp_data/co3h2_80_225k.csv",
              "units": { "input": "nm", "output": "eV" },
              "line": { "color": "grey", "type": "--" },
              "legendLabel": "Exp. Solid B"
            }
          ]
        },
        "extra_data": {
          "enable": true,
          "peak": false,
          "extraData": [
            {
              "path": "./theoretical_data/ribbon_b3lyp.csv",
              "legendLabel": "Ribbon",
              "line": { "color": "blue", "type": "-" },
              "units": ["nm", "eV"]
            },
            {
              "path": "./theoretical_data/perp_b3lyp.csv",
              "legendLabel": "Perpendicular Tetramer",
              "line": { "color": "#ffcc00", "type": "-" },
              "units": ["nm", "eV"]
            }
          ]
        }
      }
    }
  }
}
