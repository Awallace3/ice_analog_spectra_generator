{
  "buildGeoms": {
    "enable": true,
    "dataPath": "data/test",
    "inputCartesianFiles": [
      { "file": "mon_h2o.xyz", "count": 1 },
      { "file": "mon_nh3.xyz", "count": 0 }
    ],
    "clusters": 5,
    "boxLength": 3,
    "boxGrowth": {
      "enable": true,
      "increment": 3
    },
    "minDistanceMolecules": 2,
    "optMethod": "B3LYP",
    "optBasisSet": "6-31G(d)",
    "memComFile": "1600",
    "memPBSFile": "15",
    "nProcs": "4",
    "startNum": 1
  },
  "qmgr": {
    "enable": { "exc": false, "vib": false},
        "options": {
            "minDelay": 0.2, "maxResub": 1000,
            "maxQueue": 200, "cluster": "map"
            },
    "jobList": [
      {
        "dataPath": "data/test",
        "optResub": {
          "optMethod": "B3LYP",
          "optBasisSet": "6-31G(d)",
          "memComFile": "1600",
          "memPBSFile": "15"
        },
        "excList": [
          {
            "excMethod": "CAM-B3LYP",
            "excBasisSet": "6-311G(d,p)",
            "memComFile": "1600",
            "memPBSFile": "15",
            "nStates": 25,
            "SCRF": ""
          }
        ],
        "vibList": [
          {
            "excMethod": "CAM-B3LYP",
            "excBasisSet": "6-31G(d)",
            "memComFile": "1600",
            "memPBSFile": "15",
            "SCRF": ""
          }
        ]
      },
      {
        "dataPath": "data/test2",
        "optResub": {
          "optMethod": "B3LYP",
          "optBasisSet": "6-31G(d)",
          "memComFile": "1600",
          "memPBSFile": "15"
        },
        "excList": [
          {
            "excMethod": "wB97XD",
            "excBasisSet": "6-311G(d,p)",
            "memComFile": "1600",
            "memPBSFile": "15",
            "nStates": 25,
            "SCRF": ""
          }
        ],
        "vibList": [
          {
            "excMethod": "wB97XD",
            "excBasisSet": "6-31G(d)",
            "memComFile": "1600",
            "memPBSFile": "15",
            "SCRF": ""
          }
        ]
      }
    ]
  },
  "dataAnalysis": {
    "enable": false,
    "dataPath": "data/48_1_1_h2o_nh3",
    "temperature": 273.15,
    "type": "exc",
    "output": {
      "numerical": {
        "enable": true,
        "type": ".json",
        "outFile": "tmp.json",
        "excList": [
          {
            "excMethod": "CAM-B3LYP",
            "excBasisSet": "6-311G(d,p)",
            "nStates": 25,
            "acquiredStates": "25",
            "SCRF": ""
          },
          {
            "excMethod": "wB97XD",
            "excBasisSet": "6-311G(d,p)",
            "nStates": 25,
            "acquiredStates": "25",
            "SCRF": ""
          }
        ]
      },
      "plot": {
        "enable": true,
        "range": { "x": [1, 12], "y": [0, 1] },
        "x_units": "eV",
        "fileName": "data",
        "title": "",
        "dpi": 400,
        "dft": {
          "legendLabelBasisSet": false,
          "peaks": false,
          "excList": [
            {
              "excMethod": "CAM-B3LYP",
              "excBasisSet": "6-311G(d,p)",
              "nStates": 25,
              "acquiredStates": "25",
              "SCRF": "",
              "line": { "color": "red", "type": "-" }
            },
            {
              "excMethod": "wB97XD",
              "excBasisSet": "6-311G(d,p)",
              "nStates": 25,
              "acquiredStates": "25",
              "SCRF": "",
              "line": { "color": "green", "type": "-" }
            }
          ]
        },
        "exp": {
          "enable": true,
          "peaks": false,
          "expData": [
            {
              "path": "exp_data/nh3_gas.csv",
              "units": { "input": "eV", "output": "eV" },
              "line": { "color": "k", "type": "--" },
              "legendLabel": "Test 1"
            },
            {
              "path": "exp_data/nh3_solid.csv",
              "units": { "input": "eV", "output": "eV" },
              "line": { "color": "b", "type": "-" },
              "legendLabel": "Test 2"
            }
          ]
        }
      }
    }
  }
}
